<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='First'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />

	<!-- GWT MVP Support -->
	<inherits name='com.google.gwt.place.Place' />
	<inherits name='com.google.gwt.activity.Activity' />

	<!-- We need the JUnit module in the main module, -->
	<!-- otherwise eclipse complains (Google plugin bug?) -->
	<inherits name='com.google.gwt.junit.JUnit' />

	<!-- Other module inherits -->

	<!-- MGWT -->
	<inherits name="com.googlecode.mgwt.MGWT" />

	<!-- PhoneGap GWT -->
	<inherits name="com.googlecode.gwtphonegap.PhoneGap" />

	<!-- Logging config -->
	<set-property name="gwt.logging.enabled" value="TRUE" />
	<set-property name="phonegap.logging.remoteHandler" value="DISABLED" />

	<set-property name="user.agent" value="safari" /> <!-- safari -->

	<!-- During Build the value will be : "iphone, retina, android" See pom.xml 
		file for the replace plugin config. -->
	<set-property name="mgwt.os" value="iphone,retina,android" />

	<!-- For Debug/Dev only -->
	<!-- <set-configuration-property name="mgwt.css" value="pretty" /> -->

	<!-- Custom Theme -->
	<inherits name="nz.govt.studylink.mslapp.theme.MSLTheme" />

	<!-- Custom components -->
	<inherits name="nz.govt.studylink.mslapp.ui.Components" />

	<!-- Common stuff -->
	<inherits name="nz.govt.studylink.gwt.common.Common" />

	<!-- Specify the app entry point class. -->
	<entry-point class='nz.govt.studylink.mslapp.client.First' />

	<!-- Use ClientFactoryImpl by default -->
	<replace-with class="nz.govt.studylink.mslapp.client.ClientFactoryImpl">
		<when-type-is class="nz.govt.studylink.mslapp.client.ClientFactory" />
	</replace-with>

	<!-- Add Phonegap Push Notifications Plugin Javascript -->
	<script src="../cordova-plugins/PushNotification.js" />
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.NotificationPluginCordovaImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.NotificationPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="yes" />
		</all>
	</replace-with>
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.NotificationPluginBrowserImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.NotificationPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="no" />
		</all>
	</replace-with>
	
	<!-- Add Phonegap User Setting Plugin Javascript -->
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.UserSettingPluginCordovaImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.UserSettingPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="yes" />
		</all>
	</replace-with>
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.UserSettingPluginBrowserImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.UserSettingPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="no" />
		</all>
	</replace-with>
	

	
	<!-- PDF Plugin settings -->
	
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.PDFPluginCordovaImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.PDFPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="yes" />
		</all>
	</replace-with>
	<replace-with
		class="nz.govt.studylink.mslapp.client.cordova.plugins.PDFPluginBrowserImpl">
		<when-type-is
			class="nz.govt.studylink.mslapp.client.cordova.plugins.PDFPlugin" />
		<all>
			<when-property-is name="phonegap.env" value="no" />
		</all>
	</replace-with>

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />
</module>
