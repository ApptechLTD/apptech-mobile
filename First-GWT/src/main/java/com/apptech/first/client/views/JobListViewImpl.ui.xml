<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			 xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
			 xmlns:msl="urn:import:com.apptech.first.client.ui">

	<ui:style type="com.apptech.first.client.views.JobListViewImpl.Css">
	
		.customList {
			position: relative;
		}
	
		.jobListHeader {
			background: #7DBA00;
			color: white;
			padding: 5px;
			font-weight: bold;
			padding-left: 10px;
			margin-bottom: 6px;
		}
		
		.noJobMessage {
			text-align: center;
			color: #999;
			padding: 10px;
		}
		
		.jobTypeAndDate {
			color: grey;
			margin-left: 20px;
		}
		
		.jobTitle {
			color: black;
			width: 240px;
			margin-left: 20px;
		}

		.icon {
			height: 30px;
			margin-top: -15px;
			position: absolute;
			right: 20px;
			top: 50%;
			width: 30px;
		}
		
		.unreadIcon {
			height: 13px;
			margin-top: -7px;
			position: absolute;
			left: 10px;
			top: 50%;
			width: 13px;
		}
		.unreadIcon > img {
			height: 13px;
			width: 13px;
		}
		
		.displayNone {
			display: none;
		}
		
		.icon > img {
			height: 100%;
			width: 100%;
		}

		.searchingMessage{
			color: #999;
			padding-top: 10px;
			text-align: center;
		}
		
	</ui:style>

	<ui:with field="icons" type="com.apptech.first.client.resources.icons.Icons"/>

	<mgwt:LayoutPanel>

		<!-- Header Panel -->
		<mgwt:HeaderPanel ui:field="headerPanel">
			<mgwt:right>
				<msl:HeaderMenuButton ui:field="menuButton" image="{icons.menuIcon}"/>
			</mgwt:right>
			<mgwt:center>
				<msl:PageTitle text="Job List" />
			</mgwt:center>
		</mgwt:HeaderPanel>

		<!-- Lists -->
		<mgwt:ScrollPanel ui:field="scrollPanel" scrollingEnabledX="false">
		
			<g:HTMLPanel>
				<msl:Loading ui:field="searchingJobs">
				    <g:Label addStyleNames="{style.searchingMessage}">Searching jobs</g:Label>
				</msl:Loading>
			
				<g:HTMLPanel ui:field="noJobMessage" 
							 addStyleNames="{style.noJobMessage}">
					No job found.
				</g:HTMLPanel>

				<mgwt:CellList ui:field="jobList" addStyleNames="{style.customList}"/>
				
			</g:HTMLPanel>
		</mgwt:ScrollPanel>
	</mgwt:LayoutPanel>

</ui:UiBinder>
 